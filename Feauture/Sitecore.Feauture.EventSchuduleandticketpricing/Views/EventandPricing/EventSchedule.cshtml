@model Sitecore.Feauture.EventSchuduleandticketpricing.Models.EventModel

@if (Model != null)
{
    <div class="ftco-search">
        <div class="row">
            @if (Model.Publisheddetails != null)
            {
                <div class="col-md-12 nav-link-wrap">
                    <div class="nav nav-pills d-flex text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        @foreach (var PublishedDate in Model.Publisheddetails)
                        {
                            var IsActived = 1;
                            <a class="nav-link ftco-animate" @(IsActived == 1 ? "" : "active") id="@PublishedDate.TabIdName" data-toggle="pill" href="@PublishedDate.TargetedTab" role="tab" aria-controls="v-pills-1" aria-selected="true">Day @IsActived <span>@PublishedDate.PublishedDate</span></a>
                            IsActived++;
                            <div class="col-md-12 tab-wrap">

                                <div class="tab-content" id="v-pills-tabContent">

                                    <div class="tab-pane fade show  @(IsActived == 1 ? "" : "active") " id="@PublishedDate.TabIdName" role="tabpanel" aria-labelledby="day-1-tab">
                                        @foreach (var eventDetails in Model.EventDetails)
                                        {
                                            if (eventDetails.PublishedDate == PublishedDate.PublishedDate)
                                            {
                                                <div class="speaker-wrap ftco-animate d-flex">
                                                    <div class="img speaker-img" style="background-image: url(@eventDetails.SpeakerImage);"></div>
                                                    <div class="text pl-md-5">
                                                        <span class="time">@eventDetails.StartingTime: - @eventDetails.EndingTime</span>
                                                        <h2><a href="#">@eventDetails.EventTitle</a></h2>
                                                        <p>@eventDetails.EventDescription</p>
                                                        <h3 class="speaker-name">&mdash; <a href="#">@eventDetails.SpeakerName</a> <span class="position">@eventDetails.SpeakerOcupation</span></h3>
                                                    </div>
                                                </div>
                                            }
                                           
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                            </div>
                            </div>
                        }
                   
                    </div>
                </div>
              
            }
