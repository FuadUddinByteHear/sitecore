@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation;
@model RenderingModel
@{
    var renderingcolor = Sitecore.Mvc.Presentation.RenderingContext.CurrentOrNull;
    var Colorcode = "";
    if (renderingcolor != null)
    {
        var color = renderingcolor.Rendering.Parameters;
        Colorcode = color["Background Color"];
    }
    var title = Model.Item.Fields[Template.Subscription.Field.SubscriptioTitle].Value;
    var subtitle = Model.Item.Fields[Template.Subscription.Field.SubscriptioSubtitle].Value;
}
@if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    <section class="ftco-section-parallax">
        <div class="parallax-img d-flex align-items-center backgroundcolor">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
                        <h2>@Html.Sitecore().Field(Template.Subscription.Field.SubscriptioTitle.ToString())</h2>
                        <p>@Html.Sitecore().Field(Template.Subscription.Field.SubscriptioSubtitle.ToString())</p>
                        <div class="row d-flex justify-content-center mt-4 mb-4">
                            <div class="col-md-8">
                                <form action="#" class="subscribe-form">
                                    <div class="form-group d-flex">
                                        <input type="text" class="form-control" placeholder="Enter email address">
                                        <input type="submit" value="Subscribe" class="submit px-3">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="ftco-section-parallax">
        <div class="parallax-img d-flex align-items-center backgroundcolor">
            <div class="container">
                <div class="row d-flex justify-content-center ">
                    <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
                        @if (!string.IsNullOrWhiteSpace(title))
                        {
                            <h2>@title</h2>
                        }

                        @if (!string.IsNullOrWhiteSpace(subtitle))
                        {
                            <p>@subtitle</p>
                        }

                        <div class="row d-flex justify-content-center mt-4 mb-4">
                            <div class="col-md-8">
                                <form action="#" class="subscribe-form">
                                    <div class="form-group d-flex">
                                        <input type="text" class="form-control" placeholder="Enter email address">
                                        <input type="submit" value="Subscribe" class="submit px-3">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<style>
    .backgroundcolor {
        background: @Colorcode !important;
    }
</style>