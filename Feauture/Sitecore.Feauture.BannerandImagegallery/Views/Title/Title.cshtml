@using Sitecore.Foundation.Extension.Extension
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation;
@model RenderingModel
@if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    <div class="col-md-7 text-center heading-section ftco-animate">
        <span class="subheading">@Html.Sitecore().Field(Template.Title.Field.SmallTitle.ToString())</span>
        <h2 class="mb-4">
            @Html.Sitecore().Field(Template.Title.Field.Title.ToString())
        </h2>
    </div>
}
else
{
    <div class="col-md-7 text-center heading-section ftco-animate">
        @if (Model.Item.FindFieldValue(Template.Title.Field.SmallTitle))
        {
        <span class="subheading">@Model.Item.Fields[Template.Title.Field.SmallTitle].Value</span>
        }
        @if (Model.Item.FindFieldValue(Template.Title.Field.SmallTitle))
        {
            <h2 class="mb-4">
               @Html.Raw(Model.Item.Fields[Template.Title.Field.Title].Value)
            </h2>
        }
     
      
    </div>
}