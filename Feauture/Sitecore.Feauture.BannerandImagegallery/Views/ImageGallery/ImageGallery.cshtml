@using Sitecore.Data.Fields;
@using Sitecore.Data.Items
@using Sitecore.Foundation.Extension.Extension
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    MultilistField Images = Model.Item.Fields[Template.ImageGallery.Field.ImagesList];
    Item[] ImageList = Images.GetItems();
}
@if (ImageList != null)
{
    <div class="row no-gutters">
        @foreach (var image in ImageList)
        {
            <div class="col-md-3 ftco-animate">
                <a href="@image.GetImageUrl(Template.ImageGallery.Field.ImageBackgroundLink)" class="gallery image-popup img d-flex align-items-center" style="background-image: url(@image.GetImageUrl(Template.ImageGallery.Field.Image));">
                    <div class="icon mb-4 d-flex align-items-center justify-content-center">
                        <span class="icon-instagram"></span>
                    </div>
                </a>
            </div>
        }
    </div>
}